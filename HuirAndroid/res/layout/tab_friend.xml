<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<include layout="@layout/activity_app_top"/>
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/bottom_top_line1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_listname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@string/str_fri_department"
            android:textSize="14sp" />
    </LinearLayout>
    

    <ExpandableListView
	    android:id="@+id/list_department"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:cacheColorHint="@color/colorBlack"
        android:divider="@null"
        android:dividerHeight="1px"
        android:groupIndicator="@null"
        android:fastScrollEnabled="false"
        android:layout_weight="1">
	</ExpandableListView>  
    
</LinearLayout>
